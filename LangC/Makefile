########################################################
#	Makefile:
########################################################
#
.PHONY:  all

.SUFFIXES:
.SUFFIXES:	.c .o

COPT= -O2
#
OBJS	= pi10k.o
#
########################################################
#	ターゲット
########################################################
pi10k: $(OBJS)
	gcc $(COPT) $(OBJS) $(LIBS) -o $@
#
.c.o:
	gcc $(COPT) -Wall -c -o $*.o $*.c
#
########################################################
#	テスト.
########################################################
#
#
run:
	./pi10k
#
#
clean:
	-rm *.o
	-rm *.bak
	-rm *~
	-rm err
	-rm pi10k
#
#
#
########################################################
#	
########################################################
#
